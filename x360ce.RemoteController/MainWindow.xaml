        xmlns:local="clr-namespace:JocysCom.x360ce.RemoteController"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Icon="App.ico">
	<Viewbox OpacityMask="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
		<Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Height="420" Width="800">
			<Ellipse Fill="#FFF4F4F5" Height="200" Margin="0,0,150,50" Stroke="Black" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="200"/>
