			<Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Margin="50,150,0,50" Stroke="Black" Width="50"/>
			<Rectangle Fill="#FFF4F4F5" Margin="0,50,50,0" Stroke="Black" Height="50" VerticalAlignment="Top" HorizontalAlignment="Right" Width="50"/>
			<Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Right" Margin="0,150,50,50" Stroke="Black" Width="50"/>
			<Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="50" Margin="215,75,0,0" Stroke="Black" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.489,1.479"/>
			<Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="50" Margin="175,35,0,0" Stroke="Black" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.489,1.479"/>
			<Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="50" Margin="175,115,0,0" Stroke="Black" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.489,1.479"/>
			<Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="50" Margin="135,75,0,0" Stroke="Black" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.489,1.479"/>
			<Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="50" Margin="325,125,0,0" Stroke="Black" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.489,1.479"/>
			<Ellipse Fill="#FFF4F4F5" Height="50" Margin="0,115,175,0" Stroke="Black" VerticalAlignment="Top" RenderTransformOrigin="0.489,1.479" HorizontalAlignment="Right" Width="50"/>
			<Ellipse Fill="#FFF4F4F5" Height="50" Margin="0,125,325,0" Stroke="Black" VerticalAlignment="Top" RenderTransformOrigin="0.489,1.479" HorizontalAlignment="Right" Width="50"/>
			<Ellipse Fill="#FFF4F4F5" Height="50" Margin="0,35,175,0" Stroke="Black" VerticalAlignment="Top" RenderTransformOrigin="0.489,1.479" HorizontalAlignment="Right" Width="50"/>
			<Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Right" Height="50" Margin="0,75,215,0" Stroke="Black" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.489,1.479"/>
			<Ellipse Fill="#FFF4F4F5" Height="50" Margin="0,75,135,0" Stroke="Black" VerticalAlignment="Top" RenderTransformOrigin="0.489,1.479" HorizontalAlignment="Right" Width="50"/>
			<Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="50" Margin="50,50,0,0" Stroke="Black" VerticalAlignment="Top" Width="50"/>
			<Button x:Name="OptionsButton" Content="Options..." Margin="350,25,350,0" VerticalAlignment="Top" Click="OptionsButton_Click"/>

		</Grid>
	</Viewbox>
</Window>
